@model BusinessLayer.DTO.GetAspTestUserDTO
@addTagHelper *, action Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test</title>
</head>
<body>
    
    <h1>Get User</h1>
   <form asp-action="GetAspTestUser">
   @* asp-validation-summary="ModelOnly" 로 설정하면 이상하게 오류 메시지가 안뜸 *@
   <div asp-validation-summary="All" class="text-danger"></div>
   <div class="form-group">
        <label asp-for="Userid" class="control-label"></label>
        <input asp-for="Userid" name="userId" />
        <span asp-validation-for="Userid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" name="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <input type="submit" value="로그인" class="btn btn-primary" />
   </form>
</body>
</html>